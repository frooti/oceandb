<Map background-color="#00000000" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">

  <Style name="Current Style">
    <Rule>
      <MarkersSymbolizer fill="#3388ff" file="up-straight-arrow.svg" allow-overlap="true" transform="rotate([d]) scale([s]/10, [s]/10)" />
    </Rule>
  </Style>

  <Layer name="current" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
    <StyleName>Current Style</StyleName>
    <Datasource>
      <Parameter name="type">geojson</Parameter>
      <Parameter name="file">feature_collection.json</Parameter>
    </Datasource>
  </Layer>

</Map>